# the next line tells wekatester to report only bandwidth.
# report bandwidth 
[fio-bandwidth-00]
description='wekatester bandwidth workload'
readwrite=randread
blocksize=1Mi
iodepth=32
iodepth_batch=16
iodepth_batch_complete=16
numjobs=75
time_based=1
runtime=20
ramp_time=5
group_reporting=1
norandommap=1
randrepeat=0
ioengine=posixaio
nrfiles=20
filesize=9m-11m
openfiles=100
file_service_type=normal
create_serialize=0
direct=1
directory=/mnt/wekatester
filename_format=$filenum/$jobnum
